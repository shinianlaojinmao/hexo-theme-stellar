<div class='float-panel'>
  <button type='button' style='display:block' class='button-toggle mobile' onclick='util.scrollTop()'>
    <%- icon('default:upup') %>
  </button>
  <button type='button' style='display:none' class='mobile-only leftbar-toggle mobile' onclick='sidebar.leftbar()'>
    <%- icon('default:leftbar') %>
  </button>
  <button type='button' style='display:none' class='laptop-only rightbar-toggle mobile' onclick='sidebar.rightbar()'>
    <%- icon('default:rightbar') %>
  </button>
  <% if (page.comments) { %>
    <button type='button' style='display:block' class='button-toggle mobile' onclick='util.scrollComment()'>
      <%- icon('default:tocomment') %>
    </button>
  <% } %>
</div>
